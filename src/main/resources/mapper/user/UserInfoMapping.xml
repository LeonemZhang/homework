<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.csto.homework.mapper.user.UserInfoMapper">
    <!--数据库表homework_user_login 与 UserLogin的映射-->
    <resultMap id="userLogin" type="com.csto.homework.entity.user.UserLogin">
        <id column="login_id" property="loginId"/>
        <result column="login_account" property="loginAccount"/>
        <result column="login_password" property="loginPassword"/>
        <result column="login_user_type" property="loginUserType"/>
        <result column="user_info_id" property="userInfoId"/>
    </resultMap>

    <!--<select id="getUserInfoId" parameterType="String"-->

    <!--添加新的用户到数据库中-->
    <insert id="insertUserInfo" parameterType="com.csto.homework.entity.user.UserInfo">
        INSERT INTO homework_user_info(user_account,user_real_name,user_college)
              VALUES(#{account},#{name},#{college})
    </insert>


</mapper>